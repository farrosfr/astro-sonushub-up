<!doctype html>
<html lang="id" data-theme="light">
	<head>
		</head>
	<body>
		<slot />
		<footer class="site-footer">
			</footer>

		<script>
			const themeSwitcher = document.querySelectorAll('input[name="theme"]');
			const html = document.documentElement;

			function setTheme(theme: string) { // Tambahkan tipe 'string'
				html.setAttribute('data-theme', theme);
				localStorage.setItem('theme', theme);
			}

			document.addEventListener('DOMContentLoaded', () => {
				const savedTheme = localStorage.getItem('theme') || 'light';
				setTheme(savedTheme);
				// Beri tahu TS bahwa ini adalah elemen input
				const currentRadio = document.querySelector<HTMLInputElement>(`input[value="${savedTheme}"]`);
				if (currentRadio) {
					currentRadio.checked = true;
				}
			});

			themeSwitcher.forEach(switcher => {
				switcher.addEventListener('change', (event) => {
					// Cek jika target ada dan merupakan elemen input
					const target = event.target as HTMLInputElement;
					if (target) {
						setTheme(target.value);
					}
				});
			});
		</script>
	</body>
</html>